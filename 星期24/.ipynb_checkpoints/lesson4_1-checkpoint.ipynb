   ],
   "source": [
    "#計算2 - 10所有偶數的總和\n",
    "\n",
    "i = 0\n",
    "total = 0\n",
    "start = 2\n",
    "end = 10\n",
    "\n",
    "while(start <= end):\n",
    "    total += start\n",
    "    i += 1\n",
    "    print(f\"第{i}次迴圈的start={start},總和為{total}\")\n",
    "    start += 2\n"
   ]
